{# src/AppBundle/Resources/views/Common/header.html.twig #}
<div class="logo">
    <a href="{{ path('index', { '_locale': app.request.locale }) }}"><img src="{{ asset('bundles/app/images/logo.png') }}" alt="First Realty Brokerage"></a>
</div>
<nav class="menu">

    {{ render(controller('AppBundle:Common:menu', { 'request': app.request, 'indented': true })) }}

</nav>
<div class="contact-info">
    <a href="{{ path('contacts', { '_locale': app.request.locale }) }}">
        <span class="icon-location"></span>
        {{ 'common.header.map.full'|trans }}
    </a>
    <a href="tel:{{ contact.phone|replace({' ': '', '(': '', ')': ''}) }}">
        <span class="icon-phone"></span>{{ contact.phone }}
    </a>
</div>
<div class="lang">

    {% if app.request.locale == default_locale %}
        <a href="{{ path('index', { '_locale': 'en' }) ~ path }}">EN</a>
    {% else %}
        <a href="{{ path('index', { '_locale': 'ua' }) ~ path }}">UA</a>
    {% endif %}

</div>
