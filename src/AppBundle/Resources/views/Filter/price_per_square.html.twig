{# src/AppBundle/Resources/views/Filter/price_per_square.html.twig #}
{% if pricePerSquareRange['min'] or pricePerSquareRange['max'] %}
    <div class="item">
        <h3>{{ 'state.catalog.filter.price_per_square'|trans }} ({{ currency }})</h3>

        {% set FILTER_ROOT = constant('AppBundle\\Service\\Filter\\Utility\\Interfaces\\FilterArgumentsInterface::FILTER_ROOT') %}
        {% set FILTER_PRICE_PER_SQUARE = constant('AppBundle\\Service\\Filter\\Utility\\Interfaces\\FilterArgumentsInterface::FILTER_PRICE_PER_SQUARE') %}

        {% set priceMin = ( values['min'] is defined ) ? values['min'] : pricePerSquareRange['min'] %}
        {% set priceMax = ( values['max'] is defined ) ? values['max'] : pricePerSquareRange['max'] %}

        <div class="range-holder"
             data-min="{{ priceMin }}" data-range-min="{{ pricePerSquareRange['min'] }}"
             data-max="{{ priceMax }}" data-range-max="{{ pricePerSquareRange['max'] }}">
        </div>
        <div class="field-holder">
            <span>{{ 'common.from'|trans }}</span>
            <input type="text" name="{{ FILTER_ROOT }}[{{ FILTER_PRICE_PER_SQUARE }}][min]" value="{{ priceMin|number_format(0, '', '') }}" id="price-min" class="counter">
            <span>{{ 'common.to'|trans }}</span>
            <input type="text" name="{{ FILTER_ROOT }}[{{ FILTER_PRICE_PER_SQUARE }}][max]" value="{{ priceMax|number_format(0, '', '') }}" id="price-max" class="counter">
        </div>
    </div>
{% endif %}
